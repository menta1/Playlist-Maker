<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="buttonSettingsMenu" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:layout_marginBottom">21dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:gravity">start</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="fontWeight">400</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="iconGravity">end</item>
        <item name="iconTint">?attr/colorSecondaryVariant</item>
    </style>

    <style name="songItemArtistNameAndTrackTime">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:text">@string/song_duration</item>
        <item name="android:textColor">?attr/colorSecondaryVariant</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/text_size_11</item>
    </style>

    <style name="tabCustomMediateka" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:lineSpacingExtra">3sp</item>
        <item name="fontWeight">500</item>
    </style>

    <style name="toolbarMyStyle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/main_text_size_22</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">?attr/colorOnPrimary</item>
        <!-- Другие атрибуты стиля -->
    </style>
</resources>